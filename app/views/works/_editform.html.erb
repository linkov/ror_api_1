

<%= bootstrap_form_for(@work, html: { multipart: true }) do |f| %>
    <% if @work.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@work.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @work.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <%= f.text_field :title, hide_label: true, placeholder: "Title", :class=>"form-control", :id=>"descriptionField" %>
      <%= f.text_area :description, hide_label: true, placeholder: "Description", :class=>"form-control", :id=>"descriptionField" %>

      <%= image_tag @work.picture_url(:preview) %>

      <%= f.check_box :is_active, :id=>"is_activeField" %>
      <%= f.check_box :is_visible, :id=>"is_visibleField" %>

      <%= f.submit %>
 <% end %>



