<li id="work-<%= work.id %>">
  <div class="row">
    <div class="col-md-1 managecontent-edit-link-work-container">


      <div class="work-isactive-label">
        <% if work.is_active? %>
            <p>Active (set to receive detailed feedback)<p>
        <% elsif not work.is_active? %>
            <p>Uploaded (set to receive Overall feedback)<p>
        <% end %>
      </div>


      <div class="work-isvisible-label">
        <% if not work.is_visible? %>
            <p>Hidden<p>
        <% end %>
      </div>


      <div class="work-edit-button text-right">
        <% if current_user == (work.user) %>
            <%= link_to 'edit', edit_work_path(work) %>
        <% end %>
      </div>

    </div>
  </div>
    <div class="row">
    <div class="col-md-3 managecontent-image-container">
      <%= image_tag(work.picture_url(), :class => "work-preview") %>


  </div>

  <div class="col-md-4 managecontent-work-container">

    <div class="work-info">

        <p><%= work.title %></p>
        <p>Uploaded <%= time_ago_in_words(work.created_at) %> ago.</p>
        <p>View count <%= work.impressionist_count %></p>

    </div>

    <div class="col-md-4 work-info-share">
      <p>share on social network</p>
    </div>

  </div>




    </div>

</li>